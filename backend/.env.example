# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database Configuration (PostgreSQL on elest.io)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pbm_knowledge_hub
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# JWT Configuration (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_min_32_chars_long_replace_this
JWT_REFRESH_SECRET=your_refresh_secret_min_32_chars_long_replace_this

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@pbm-knowledge-hub.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@pbm-knowledge-hub.com

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
